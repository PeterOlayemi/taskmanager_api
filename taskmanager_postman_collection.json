  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"email\": \"user1@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register/",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "register", ""]
        }
      }
    },
    {
      "name": "Login (Obtain Token)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/token/",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "token", ""]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/token/refresh/",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "token", "refresh", ""]
        }
      }
    },
    {
      "name": "List Tasks",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"}
        ],
        "url": {
          "raw": "{{base_url}}/api/tasks/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", ""]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test Task\",\n  \"description\": \"A test task\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", ""]
        }
      }
    },
    {
      "name": "Retrieve Task",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"}
        ],
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", ""]
        }
      }
    },
    {
      "name": "Update Task (Owner Only)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Task\",\n  \"description\": \"Updated description\",\n  \"status\": \"pending\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", ""]
        }
      }
    },
    {
      "name": "Delete Task (Owner Only)",
      "request": {
        "method": "DELETE",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"}
        ],
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", ""]
        }
      }
    },
    {
      "name": "Assign Task (Owner Only)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"assignee_id\": {{assignee_id}}\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/assign/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", "assign", ""]
        }
      }
    },
    {
      "name": "Update Task Status (Assignee Only)",
      "request": {
        "method": "PATCH",
        "header": [
          {"key": "Authorization", "value": "Bearer {{access_token}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"in_progress\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks/{{task_id}}/status/",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "{{task_id}}", "status", ""]
        }
      }
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:8000"},
